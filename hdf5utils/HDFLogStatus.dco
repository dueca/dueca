(Type vstring "#include <stringoptions.h>")
(Type bool)

;; Status feedback for hdf logging
(Event HDFLogStatus
       ;; file name for creating an HDF log, if empty, use previous
       ;; or default file name
       (vstring status)
       ;; path prefix for the logging. Can be used to log multiple
       ;; sets in a single file. If empty, no prefix
       (bool error (Default false))
       )
