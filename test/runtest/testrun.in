#!/usr/bin/bash

@XVFB@ @DISPLAY@ -screen 0 @DISPLAYSIZE@x24 &
XVFBPID=$!
export DISPLAY=@DISPLAY@

sleep 1
@WINDOWMANAGER@ &
sleep 1
timeout --kill-after=10 @TIMELIMIT@ \
       @Python_EXECUTABLE@ @CMAKE_CURRENT_SOURCE_DIR@/testrunner.py \
       --base @TESTRUN_BASE@ \
       --control @CMAKE_CURRENT_SOURCE_DIR@/@CONTROLFILE@.xml
RESULT=$?
sleep 1

kill ${XVFBPID}
exit ${RESULT}


