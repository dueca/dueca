<?xml version="1.0"?>
<configuration
	xmlns="https://dueca.tudelft.nl/platform"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://dueca.tudelft.nl/platform https://dueca.tudelft.nl/schemas/platform.xsd">
	<machineclasses>
		<machineclass name="hmi-ecs" gui="gtk3" />
