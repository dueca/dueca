(Type std::string "#include <string>")
(Type uint32_t "#include <inttypes.h>")

;; Details of a file, name, size, date
(Event NameSizeDate
       (Option hdf5nest)
       ;; filename
       (std::string name)
       ;; file length
       (uint32_t size (Default 0U))
       ;; creation/modification date
       (std::string date)
       )

